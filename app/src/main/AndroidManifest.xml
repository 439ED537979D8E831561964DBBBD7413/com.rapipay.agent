<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rapipay.android.rapipay">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme.PopupOverlay"
        android:largeHeap="true">

        <activity android:name=".main_directory.main_directory.LoginScreenActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.FundTransferActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.PendingRefundActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.WalletDetailsActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.NetworkTransferActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.CreditTabPage"
        android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.RegisterUserActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.PinActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.NetworkTab"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.PinVerification"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.PopupOverlay"/>
        <activity android:name=".main_directory.main_directory.MainActivity"
            android:theme="@style/AppTheme.PopupOverlay"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.WebViewClientActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.ReChargeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.UserSettingDetails"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.ChannelHistoryActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.PassbookActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.DailyCommissionActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".main_directory.main_directory.SpashScreenActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>