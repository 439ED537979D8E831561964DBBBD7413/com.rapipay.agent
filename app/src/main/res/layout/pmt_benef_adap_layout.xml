<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:inputType="text"
                android:text="Receiver Mobile"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_name"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:onClick="onClick"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:inputType="text"
                android:text="Receiver Details"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_account"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:inputType="text"
                android:text="Relation with Sender"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_bank"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:inputType="text"
                android:text="Account Number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_accountnum"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:inputType="text"
                android:text="PMT Bene ID"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_beneid"
                android:layout_width="0dp"
                android:inputType="textMultiLine"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="300"
                android:inputType="text"
                android:text="Bank Details"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_bankdetails"
                android:layout_width="0dp"
                android:inputType="textMultiLine"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>