<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="AGENT MOBILE"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/agent_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_accountno"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="LIEN REQUEST ID"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/lien_requestid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_amounts"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="LIEN AMOUNT"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/lien_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_transid"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <me.grantland.widget.AutofitTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="LIEN REASON"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/lien_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/agentBalance"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="LIEN CREATED ON"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/lien_created"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/agentBalance"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="LIEN REMOVAL STATUS"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/lien_remove_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/agentBalance"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>