<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/kyc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/docs_type"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:spinnerMode="dropdown"/>
            <TextView
                android:id="@+id/documentype"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/documentid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Document ID"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/sub_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_button"
                android:onClick="onClick"
                android:clickable="true"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="14dp" />
            <LinearLayout
                android:id="@+id/scan_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="800"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/scan_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="400"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:text="Scan"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/manual_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="400"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="Manual"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kyc_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="800"
                android:visibility="gone">

                <TextView
                    android:id="@+id/registration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="650"
                    android:text="*  Registration"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/registration_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="add"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="800">

                <TextView
                    android:id="@+id/prsnl_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="650"
                    android:text="*  Personal Details"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/prsnl_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="800"
                android:visibility="gone">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="650"
                    android:text="*  Address Proof"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/adrs_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buisness_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="800"
                android:visibility="gone">

                <TextView
                    android:id="@+id/business_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="650"
                    android:text="*  Business Details"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/business_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/verification_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="800"
                android:visibility="gone">

                <TextView
                    android:id="@+id/verification_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="650"
                    android:text="*  Verification Details"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/verification_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:weightSum="800"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bank_dtail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="650"
                    android:text="*  Bank Details"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/bank_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>