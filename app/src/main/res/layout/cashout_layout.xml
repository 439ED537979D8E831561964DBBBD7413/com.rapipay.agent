<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:theme="@style/AppTheme">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/pchist"
                android:textColor="@color/white"
                android:visibility="gone" />
            <!--  Email Label -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/mobile_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/p_mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="16dp" />
                </android.support.design.widget.TextInputLayout>

                <!--<ImageView-->
                    <!--android:id="@+id/btn_contact"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_weight="150"-->
                    <!--android:clickable="true"-->
                    <!--android:onClick="onClick"-->
                    <!--android:src="@drawable/contactsicon"-->
                    <!--android:textColor="@color/white" />-->
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/input_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/p_amount"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="16dp" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:padding="10dp"
                android:id="@+id/input_texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/red"
                android:visibility="gone"/>
            <Spinner
                android:id="@+id/select_bank"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:spinnerMode="dropdown"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/inflate_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="800">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="277"
                    android:text="EMI AMOUNT" />

                <TextView
                    android:id="@+id/percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="277"
                    android:text="EMI PERCENT" />

                <TextView
                    android:id="@+id/tenure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="276"
                    android:text="EMI TENURE" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inflate_tenureee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Select below option for EMI"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <ListView
                    android:id="@+id/lv_imflate"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:listSelector="@android:color/darker_gray" />
            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/getEmidetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/border_button"
                android:onClick="onClick"
                android:text="Click to Get EMI"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/getdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/border_button"
                android:onClick="onClick"
                android:text="Get EMI"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="800">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_fund_mpos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="400"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="@string/btnsubmit"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/reciept_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="400"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:text="@string/reciept_details"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>