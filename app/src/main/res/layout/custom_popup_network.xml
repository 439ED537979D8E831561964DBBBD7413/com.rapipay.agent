<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_transid"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/p_transid"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_name"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/p_accountno"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_bank"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agentBalance"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_amount_ben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/p_amount"
                android:inputType="number"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>