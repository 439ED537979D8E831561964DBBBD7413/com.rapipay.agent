<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln_history"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:id="@+id/txt_r_id"
                android:inputType="text"
                android:text="@string/p_requestid"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="@string/p_accountno"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:inputType="text"
                android:id="@+id/txt_amount"
                android:text="Amount"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_p_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="@string/agentBalance"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:id="@+id/ln_req_type"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:inputType="text"
                android:id="@+id/txt_req_type"
                android:text="Request Type"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_amounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="@string/p_amounts"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:visibility="gone"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:inputType="text"
                android:text="Transaction Date Time"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_transid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="@string/p_transid"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:inputType="text"
                android:id="@+id/txt_remarks"
                android:text="@string/p_remarks"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_p_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="@string/agentBalance"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:inputType="text"
                android:id="@+id/txt_status"
                android:text="@string/p_status"
                android:textSize="12sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:text="@string/p_status"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="8sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:orientation="horizontal"
            android:weightSum="800">

            <TextView
                android:id="@+id/txt_bank_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="320"
                android:inputType="textMultiLine"
                android:text="Bank Details"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_p_bank_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="480"
                android:inputType="textMultiLine"
                android:text="@string/agentBalance"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>