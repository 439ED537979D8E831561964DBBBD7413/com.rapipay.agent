<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="Account No."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_accountno"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="Total Amount"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_p_amounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_amounts"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="Iransaction ID"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_p_transid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_transid"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="Bank Name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_p_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_bank"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="Bank RRN"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_rrn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="@string/p_bank"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>
        <LinearLayout
            android:id="@id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3sp"
            android:weightSum="800">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="350"
                android:inputType="text"
                android:text="Txn. Date"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="450"
                android:text="Txn. Date"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>