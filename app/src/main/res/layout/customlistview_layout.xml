<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/tppp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>

            <EditText
                android:layout_below="@id/tppp"
                android:id="@+id/increaselimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:inputType="number"
                android:padding="15dp"
                android:hint="Increase Limit"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <ListView
                android:layout_below="@+id/increaselimit"
                android:layout_above="@+id/bottoo"
                android:id="@+id/list_view_with_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/bottoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="800">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_button"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
