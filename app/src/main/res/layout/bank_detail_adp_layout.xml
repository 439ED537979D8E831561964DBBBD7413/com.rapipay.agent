<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="400"
            android:inputType="textMultiLine"
            android:text="@string/p_names"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_black"
            android:orientation="vertical"
            android:weightSum="800"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:orientation="horizontal"
                android:weightSum="800">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="text"
                    android:text="Name of Account"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="textMultiLine"
                    android:text="@string/p_accountno"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:orientation="horizontal"
                android:weightSum="800">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="text"
                    android:text="Account No."
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="textMultiLine"
                    android:text="@string/p_bank"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ifsc_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:orientation="horizontal"
                android:weightSum="800">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="text"
                    android:text="IFSC"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ifsc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:orientation="horizontal"
                android:weightSum="800">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="text"
                    android:text="Deposite Type"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/isverified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>