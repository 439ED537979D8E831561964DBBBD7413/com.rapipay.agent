<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:text="@string/p_accountno"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="10sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_amounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:text="@string/p_amounts"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="10sp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_transid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:text="@string/p_transid"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="10sp"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_p_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="500"
                android:text="@string/agentBalance"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="10sp"/>
        <me.grantland.widget.AutofitTextView
            android:id="@+id/btn_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:text="@string/agentBalance"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            autofit:minTextSize="10sp"/>
        <me.grantland.widget.AutofitTextView
            android:id="@+id/transferType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:text="@string/agentBalance"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            autofit:minTextSize="10sp"/>
        <me.grantland.widget.AutofitTextView
            android:id="@+id/transferdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="500"
            android:text="@string/agentBalance"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            autofit:minTextSize="10sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>