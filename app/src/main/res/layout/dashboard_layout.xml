<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:layout_marginBottom="3dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="18dp"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/regss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="300"
                    android:background="@color/newcolor"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rv_left_1"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@drawable/arrow_left"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:fadeScrollbars="false"
                        android:layout_weight="250"
                        android:scrollbarThumbHorizontal="@color/newcolor"
                        android:gravity="center_horizontal"
                        android:scrollbars="horizontal" />

                    <ImageView
                        android:id="@+id/rv_right_1"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@drawable/arrow_right"
                        android:onClick="onClick"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="240"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rv_left_5"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@drawable/arrow_left"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_weight="230"
                        android:scrollbarThumbHorizontal="@color/white"
                        android:gravity="center_horizontal"
                        android:fadeScrollbars="false"
                        android:scrollbars="horizontal" />

                    <ImageView
                        android:id="@+id/rv_right_5"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@drawable/arrow_right"
                        android:onClick="onClick"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="280"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginRight="1dp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/p_moneytransfer"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginLeft="2dp"
                        android:background="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="300"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rv_left_4"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@drawable/arrow_left"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_weight="250"
                        android:fadeScrollbars="false"
                        android:scrollbarThumbHorizontal="@color/white"
                        android:gravity="center_horizontal"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="horizontal" />

                    <ImageView
                        android:id="@+id/rv_right_4"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:background="@drawable/arrow_right"
                        android:onClick="onClick"
                        android:visibility="gone" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginLeft="2dp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/p_bc"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginRight="2dp"
                        android:background="@color/black" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_bc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:scrollbars="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginLeft="2dp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/p_recharge"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginRight="2dp"
                        android:background="@color/black" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:scrollbars="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="400"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="100"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/p_mpos"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height=".5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="100"
                        android:layout_marginRight="2dp"
                        android:background="@color/black" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:id="@+id/matm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="400"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height=".5dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="100"
                            android:layout_marginLeft="2dp"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="MATM"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height=".5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="100"
                            android:background="@color/black" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadeScrollbars="false"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/aeps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="400"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height=".5dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="100"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="AEPS"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height=".5dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="100"
                            android:background="@color/black" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fadeScrollbars="false"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/bankdetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:gravity="center"
            android:background="@drawable/backfile"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="11dp"
            tools:ignore="RtlCompat" />
    </FrameLayout>

    <com.rapipay.android.agent.view.MovableFloatingActionButton
        android:id="@+id/movablefloating"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/violet"
        android:src="@drawable/bank_icon"
        android:visibility="gone" />

</RelativeLayout>